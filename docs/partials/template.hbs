<!DOCTYPE html>
<html lang="en">
  <head>
    <title>API Documentation</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- CSS Framework -->
    <link href="/public/css/bootstrap.min.css" rel="stylesheet">
    <script src="/public/js/bootstrap.min.js"></script>
    <!-- Syntax highlighting -->
    <link href="/public/css/highlights/stackoverflow-dark.min.css" rel="stylesheet">
    <script src="/public/js/highlight.min.js"></script>
    <script>
      hljs.highlightAll()
    </script>
    <!-- Custom stylesheet -->
    <link href="/public/css/docs.css" rel="stylesheet">
  </head>
  <body class="bg-body text-body" data-bs-theme="dark">
    <header class="bg-dark-subtle fixed-top">
      <nav class="navbar navbar-expand-sm">
        <div class="container-fluid">
          <a class="navbar-brand" href="/api/docs"><h3 class="mb-0">Docs</h3></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
              {{#each pages}}
              <li class="nav-item">
                <a class="nav-link" href="/api/docs#{{this}}">{{this}}</a>
              </li>
              {{/each}}
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="container-fluid">
      {{> @partial-block }}
    </div>
    <footer class="bg-dark-subtle">
    </footer>
    <a href="#" id="to-top" class="btn btn-secondary border-light rounded-1">â†‘</a>
  </body>
</html>

<script>
  const navLinks = document.querySelectorAll('.nav-link')
  const nav = document.getElementById('navbarNav')
  const bsCollapse = new bootstrap.Collapse(nav)
  bsCollapse.toggle()
  navLinks.forEach(l => {
    l.addEventListener('click', () => { bsCollapse.toggle() })
  })
</script>
